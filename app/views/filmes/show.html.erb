    <div class="col-md-4">
        <img src="<%= @filme.url_capa %>" alt="Capa" height="475px" width="325px">
    </div> 

    <div class="col-md-8">
        <h2> <strong> <%= @filme.titulo %> (<%= @filme.ano %>) </strong> </h2>
