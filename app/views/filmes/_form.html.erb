<%= simple_form_for @filme do |f| %>
    <%= f.input :titulo, label: "Título" %>
    <%= f.input :ano, label: "Ano", input_html: { min: '0', step: '1' } %>
    <%= f.input :genero, label: "Gênero" %>
    <%= f.input :sinopse, label: "Sinopse" %>
    <%= f.input :url_capa, label: "Capa (URL)" %>
    <%= f.button :submit, "Adicionar Filme", :class => 'btn-custom2'%>
<% end %>